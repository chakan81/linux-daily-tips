# Linux Daily Tips Frontend - Local Development Environment
# Copy this file to .env.local for local development

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
# Application Info
NEXT_PUBLIC_APP_NAME=Linux Daily Tips
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Daily Linux tips and interactive terminal practice

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URLs (Local Development)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
API_URL=http://localhost:8000
API_TIMEOUT=30000

# WebSocket Configuration (Local Development)
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_TERMINAL_WS_URL=ws://localhost:8000/ws/terminal

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-not-for-production
JWT_SECRET=dev-jwt-secret-matching-backend

# =============================================================================
# GOOGLE ADSENSE CONFIGURATION (Disabled in development)
# =============================================================================
NEXT_PUBLIC_GOOGLE_ADSENSE_CLIENT_ID=
NEXT_PUBLIC_ADSENSE_ENABLED=false

# =============================================================================
# ANALYTICS CONFIGURATION (Disabled in development)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_GA_ENABLED=false

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_POSTHOG_ENABLED=false

# =============================================================================
# TERMINAL EMULATOR CONFIGURATION
# =============================================================================
NEXT_PUBLIC_TERMINAL_ENABLED=true
NEXT_PUBLIC_TERMINAL_TIMEOUT=30000
NEXT_PUBLIC_TERMINAL_THEME=dark
NEXT_PUBLIC_TERMINAL_FONT_SIZE=14
NEXT_PUBLIC_TERMINAL_ROWS=24
NEXT_PUBLIC_TERMINAL_COLS=80

# =============================================================================
# FEATURE FLAGS (All enabled for development)
# =============================================================================
NEXT_PUBLIC_FEATURE_SEARCH=true
NEXT_PUBLIC_FEATURE_HISTORY=true
NEXT_PUBLIC_FEATURE_USER_ACCOUNTS=false
NEXT_PUBLIC_FEATURE_ADMIN_PANEL=true
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_PERSISTENCE=true

# Pagination (Reduced for development)
NEXT_PUBLIC_TIPS_PER_PAGE=5
NEXT_PUBLIC_SEARCH_RESULTS_PER_PAGE=10

# Cache Configuration (Shorter duration for development)
NEXT_PUBLIC_CACHE_TIPS=true
NEXT_PUBLIC_CACHE_DURATION=60000  # 1 minute

# =============================================================================
# SEO CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Linux Daily Tips (Dev)
NEXT_PUBLIC_SITE_DESCRIPTION=Learn Linux with daily tips and interactive terminal practice - Development
NEXT_PUBLIC_SITE_KEYWORDS=Linux,Tips,Terminal,Command Line,Tutorial,Learning,Development
NEXT_PUBLIC_SITE_AUTHOR=Linux Daily Tips Team
NEXT_PUBLIC_SOCIAL_IMAGE=/images/social-preview.png

# =============================================================================
# SOCIAL MEDIA CONFIGURATION (Development placeholders)
# =============================================================================
NEXT_PUBLIC_TWITTER_HANDLE=@linuxdailytips
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername/linux-daily-tips
NEXT_PUBLIC_DISCORD_URL=

# =============================================================================
# MONITORING & ERROR TRACKING (Optional in development)
# =============================================================================
# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
SENTRY_AUTH_TOKEN=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Tools
ANALYZE=false
BUNDLE_ANALYZE=false

# Hot Reload & Fast Refresh
FAST_REFRESH=true

# Source Maps (Enabled for debugging)
GENERATE_SOURCEMAP=true

# =============================================================================
# CONTENT CONFIGURATION
# =============================================================================
# Content Management (Faster refresh for development)
NEXT_PUBLIC_CONTENT_REFRESH_INTERVAL=10000  # 10 seconds
NEXT_PUBLIC_MAX_TIP_LENGTH=5000
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,ko

# Image Configuration (More permissive in development)
NEXT_PUBLIC_MAX_IMAGE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/svg+xml,image/gif

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Disabled in development)
# =============================================================================
# Newsletter
NEXT_PUBLIC_NEWSLETTER_ENABLED=false
MAILCHIMP_API_KEY=
MAILCHIMP_AUDIENCE_ID=

# Comments System
NEXT_PUBLIC_COMMENTS_ENABLED=false
DISQUS_SHORTNAME=

# =============================================================================
# DEVELOPMENT DEBUGGING
# =============================================================================
# Debug Flags
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_API_RESPONSES=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_RENDER_PERFORMANCE=true