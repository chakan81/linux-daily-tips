# Linux Daily Tips Frontend - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
# Application Info
NEXT_PUBLIC_APP_NAME=Linux Daily Tips
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Daily Linux tips and interactive terminal practice

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
API_URL=http://localhost:8000
API_TIMEOUT=30000

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_TERMINAL_WS_URL=ws://localhost:8000/ws/terminal

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-matching-backend

# =============================================================================
# GOOGLE ADSENSE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_GOOGLE_ADSENSE_CLIENT_ID=ca-pub-your_adsense_client_id
NEXT_PUBLIC_ADSENSE_ENABLED=false

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-YOUR_GA_TRACKING_ID
NEXT_PUBLIC_GA_ENABLED=false

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_POSTHOG_ENABLED=false

# =============================================================================
# TERMINAL EMULATOR CONFIGURATION
# =============================================================================
NEXT_PUBLIC_TERMINAL_ENABLED=true
NEXT_PUBLIC_TERMINAL_TIMEOUT=30000
NEXT_PUBLIC_TERMINAL_THEME=dark
NEXT_PUBLIC_TERMINAL_FONT_SIZE=14
NEXT_PUBLIC_TERMINAL_ROWS=24
NEXT_PUBLIC_TERMINAL_COLS=80

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_FEATURE_SEARCH=true
NEXT_PUBLIC_FEATURE_HISTORY=true
NEXT_PUBLIC_FEATURE_USER_ACCOUNTS=false
NEXT_PUBLIC_FEATURE_ADMIN_PANEL=true
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_PERSISTENCE=true

# Pagination
NEXT_PUBLIC_TIPS_PER_PAGE=10
NEXT_PUBLIC_SEARCH_RESULTS_PER_PAGE=20

# Cache Configuration
NEXT_PUBLIC_CACHE_TIPS=true
NEXT_PUBLIC_CACHE_DURATION=300000  # 5 minutes

# =============================================================================
# SEO CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Linux Daily Tips
NEXT_PUBLIC_SITE_DESCRIPTION=Learn Linux with daily tips and interactive terminal practice
NEXT_PUBLIC_SITE_KEYWORDS=Linux,Tips,Terminal,Command Line,Tutorial,Learning
NEXT_PUBLIC_SITE_AUTHOR=Linux Daily Tips Team
NEXT_PUBLIC_SOCIAL_IMAGE=/images/social-preview.png

# =============================================================================
# SOCIAL MEDIA CONFIGURATION
# =============================================================================
NEXT_PUBLIC_TWITTER_HANDLE=@linuxdailytips
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername/linux-daily-tips
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/your_discord_invite

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Tools
ANALYZE=false
BUNDLE_ANALYZE=false

# Hot Reload & Fast Refresh
FAST_REFRESH=true

# Source Maps
GENERATE_SOURCEMAP=true

# =============================================================================
# CONTENT CONFIGURATION
# =============================================================================
# Content Management
NEXT_PUBLIC_CONTENT_REFRESH_INTERVAL=60000  # 1 minute
NEXT_PUBLIC_MAX_TIP_LENGTH=5000
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,ko,ja,es,fr,de

# Image Configuration
NEXT_PUBLIC_MAX_IMAGE_SIZE=5242880  # 5MB
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/svg+xml

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Newsletter (Optional)
NEXT_PUBLIC_NEWSLETTER_ENABLED=false
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_AUDIENCE_ID=your_audience_id

# Comments System (Optional)
NEXT_PUBLIC_COMMENTS_ENABLED=false
DISQUS_SHORTNAME=your_disqus_shortname