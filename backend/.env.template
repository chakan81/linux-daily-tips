# Linux Daily Tips Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/linux_daily_tips
POSTGRES_DB=linux_daily_tips
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =============================================================================
# FASTAPI APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Linux Daily Tips API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# =============================================================================
# TERMINAL EMULATOR CONFIGURATION
# =============================================================================
TERMINAL_TIMEOUT=30
TERMINAL_MAX_MEMORY=512m
TERMINAL_MAX_CPU=0.5
TERMINAL_MAX_SESSIONS=100
TERMINAL_CONTAINER_PREFIX=linuxtips_terminal_
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_REDIS_KEY_PREFIX=ratelimit:

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@linuxtips.dev
ADMIN_PASSWORD=your_admin_password
ADMIN_USERNAME=admin

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true
SMTP_FROM=noreply@linuxtips.dev

# =============================================================================
# GOOGLE ADSENSE CONFIGURATION
# =============================================================================
GOOGLE_ADSENSE_CLIENT_ID=your-adsense-client-id
GOOGLE_ADSENSE_PUBLISHER_ID=your-publisher-id
ADSENSE_ENABLED=false

# =============================================================================
# MONITORING & ANALYTICS CONFIGURATION
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
POSTHOG_API_KEY=your-posthog-api-key-here
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.txt,.md,.json,.yaml,.yml
UPLOAD_DIR=uploads/

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE=logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s