# Linux Daily Tips Backend - Development Environment
# This file contains actual development values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres_dev_password@localhost:5432/linux_daily_tips
POSTGRES_DB=linux_daily_tips
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:redis_dev_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_DB=0

# =============================================================================
# FASTAPI APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Linux Daily Tips API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security (Development keys - DO NOT use in production)
SECRET_KEY=dev-secret-key-not-for-production-use-only
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production-use-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================
# OpenAI Configuration (Add your actual keys here)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration (Add your actual keys here)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# =============================================================================
# TERMINAL EMULATOR CONFIGURATION
# =============================================================================
TERMINAL_TIMEOUT=30
TERMINAL_MAX_MEMORY=512m
TERMINAL_MAX_CPU=0.5
TERMINAL_MAX_SESSIONS=100
TERMINAL_CONTAINER_PREFIX=linuxtips_terminal_dev_
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# RATE LIMITING CONFIGURATION (Relaxed for development)
# =============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60
RATE_LIMIT_REDIS_KEY_PREFIX=ratelimit:dev:

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@linuxtips.dev
ADMIN_PASSWORD=admin_dev_password
ADMIN_USERNAME=admin

# =============================================================================
# EMAIL CONFIGURATION (Development - Using Mailhog)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_FROM=dev@linuxtips.dev

# =============================================================================
# GOOGLE ADSENSE CONFIGURATION (Disabled in development)
# =============================================================================
GOOGLE_ADSENSE_CLIENT_ID=
GOOGLE_ADSENSE_PUBLISHER_ID=
ADSENSE_ENABLED=false

# =============================================================================
# MONITORING & ANALYTICS CONFIGURATION (Optional in dev)
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.txt,.md,.json,.yaml,.yml,.py,.sh
UPLOAD_DIR=uploads/

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes in development
CACHE_MAX_SIZE=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE=logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s