# Linux Daily Tips - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=linux_daily_tips
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
DATABASE_URL=postgresql+asyncpg://postgres:postgres_dev_password@localhost:5432/linux_daily_tips

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis_dev_password
REDIS_URL=redis://:redis_dev_password@localhost:6379/0

# =============================================================================
# FASTAPI BACKEND CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================
# OpenAI API (required for content generation)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Claude API (optional, for backup/comparison)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# TERMINAL EMULATOR CONFIGURATION
# =============================================================================
TERMINAL_TIMEOUT=30
TERMINAL_MAX_MEMORY=512m
TERMINAL_MAX_CPU=0.5
TERMINAL_MAX_SESSIONS=100
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# DEVELOPMENT TOOLS CONFIGURATION
# =============================================================================
# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@linuxtips.dev
PGADMIN_DEFAULT_PASSWORD=pgadmin_dev_password

# Redis Commander
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=redis_commander_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# =============================================================================
# GOOGLE ADSENSE (Production)
# =============================================================================
GOOGLE_ADSENSE_CLIENT_ID=your-adsense-client-id
GOOGLE_ADSENSE_PUBLISHER_ID=your-publisher-id

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
POSTHOG_API_KEY=your-posthog-api-key-here
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# EMAIL CONFIGURATION (Development - Mailhog)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Set these in production environment
# DATABASE_URL=postgresql+asyncpg://user:password@prod-host:5432/dbname
# REDIS_URL=redis://user:password@prod-host:6379/0
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=INFO