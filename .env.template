# Linux Daily Tips - Docker Compose Environment Variables Template
# Copy this file to .env and fill in your actual values for Docker Compose

# =============================================================================
# PROJECT INFORMATION
# =============================================================================
COMPOSE_PROJECT_NAME=linux-daily-tips
PROJECT_VERSION=1.0.0

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================
# Docker Compose Profiles
COMPOSE_PROFILES=dev,monitoring

# Network Configuration
NETWORK_NAME=linux-daily-tips-network

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_DB=linux_daily_tips
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_postgres_password@postgres:5432/linux_daily_tips

# PostgreSQL Docker Configuration
POSTGRES_DOCKER_TAG=15-alpine
POSTGRES_DATA_DIR=./data/postgres
POSTGRES_INIT_DIR=./backend/init-db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://:your_secure_redis_password@redis:6379/0

# Redis Docker Configuration
REDIS_DOCKER_TAG=7-alpine
REDIS_DATA_DIR=./data/redis

# =============================================================================
# BACKEND CONFIGURATION (FastAPI)
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# =============================================================================
# TERMINAL EMULATOR CONFIGURATION
# =============================================================================
TERMINAL_TIMEOUT=30
TERMINAL_MAX_MEMORY=512m
TERMINAL_MAX_CPU=0.5
TERMINAL_MAX_SESSIONS=100
TERMINAL_CONTAINER_PREFIX=linuxtips_terminal_
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# DEVELOPMENT TOOLS CONFIGURATION
# =============================================================================
# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@linuxtips.dev
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password
PGADMIN_PORT=5050

# Redis Commander Configuration
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=your_redis_commander_password
REDIS_COMMANDER_PORT=8081

# Mailhog Configuration (Development Email Testing)
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Sentry Configuration
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# PostHog Analytics
POSTHOG_API_KEY=your-posthog-api-key-here
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# GOOGLE ADSENSE CONFIGURATION
# =============================================================================
GOOGLE_ADSENSE_CLIENT_ID=ca-pub-your_adsense_client_id
GOOGLE_ADSENSE_PUBLISHER_ID=pub-your_publisher_id
ADSENSE_ENABLED=false

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_REDIS_KEY_PREFIX=ratelimit:

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.txt,.md,.json,.yaml,.yml,.py,.sh
UPLOAD_DIR=./data/uploads/

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
FORCE_HTTPS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_DIR=./logs
LOG_FILE=app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false
BACKUP_DIR=./backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
# Backend Resource Limits
BACKEND_MEMORY_LIMIT=1g
BACKEND_CPU_LIMIT=1.0

# Frontend Resource Limits
FRONTEND_MEMORY_LIMIT=512m
FRONTEND_CPU_LIMIT=0.5

# Database Resource Limits
POSTGRES_MEMORY_LIMIT=512m
POSTGRES_CPU_LIMIT=0.5

# Redis Resource Limits
REDIS_MEMORY_LIMIT=256m
REDIS_CPU_LIMIT=0.25