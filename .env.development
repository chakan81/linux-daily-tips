# Linux Daily Tips - Development Environment
# This file contains actual development values for Docker Compose

# =============================================================================
# PROJECT INFORMATION
# =============================================================================
COMPOSE_PROJECT_NAME=linux-daily-tips-dev
PROJECT_VERSION=1.0.0-dev

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================
# Docker Compose Profiles
COMPOSE_PROFILES=dev,monitoring

# Network Configuration
NETWORK_NAME=linux-daily-tips-dev-network

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_DB=linux_daily_tips
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password_2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres_dev_password_2024@postgres:5432/linux_daily_tips

# PostgreSQL Docker Configuration
POSTGRES_DOCKER_TAG=15-alpine
POSTGRES_DATA_DIR=./data/postgres
POSTGRES_INIT_DIR=./backend/init-db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis_dev_password_2024
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://:redis_dev_password_2024@redis:6379/0

# Redis Docker Configuration
REDIS_DOCKER_TAG=7-alpine
REDIS_DATA_DIR=./data/redis

# =============================================================================
# BACKEND CONFIGURATION (FastAPI)
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1  # Single worker for development

# Security (Development keys - DO NOT use in production)
SECRET_KEY=dev-secret-key-not-for-production-use-only-2024
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production-use-only-2024
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (Permissive for development)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://frontend:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-not-for-production-2024

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================
# OpenAI Configuration (Add your actual keys here)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration (Add your actual keys here)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# =============================================================================
# TERMINAL EMULATOR CONFIGURATION
# =============================================================================
TERMINAL_TIMEOUT=30
TERMINAL_MAX_MEMORY=512m
TERMINAL_MAX_CPU=0.5
TERMINAL_MAX_SESSIONS=100
TERMINAL_CONTAINER_PREFIX=linuxtips_terminal_dev_
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# DEVELOPMENT TOOLS CONFIGURATION
# =============================================================================
# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@linuxtips.dev
PGADMIN_DEFAULT_PASSWORD=pgadmin_dev_password_2024
PGADMIN_PORT=5050

# Redis Commander Configuration
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=redis_commander_dev_password_2024
REDIS_COMMANDER_PORT=8081

# Mailhog Configuration (Development Email Testing)
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# =============================================================================
# MONITORING CONFIGURATION (Optional in development)
# =============================================================================
# Sentry Configuration
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# PostHog Analytics
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# GOOGLE ADSENSE CONFIGURATION (Disabled in development)
# =============================================================================
GOOGLE_ADSENSE_CLIENT_ID=
GOOGLE_ADSENSE_PUBLISHER_ID=
ADSENSE_ENABLED=false

# =============================================================================
# RATE LIMITING CONFIGURATION (Relaxed for development)
# =============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60
RATE_LIMIT_REDIS_KEY_PREFIX=ratelimit:dev:

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes (larger for development)
ALLOWED_FILE_TYPES=.txt,.md,.json,.yaml,.yml,.py,.sh,.log
UPLOAD_DIR=./data/uploads/

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes in development
CACHE_MAX_SIZE=100

# =============================================================================
# SSL/TLS CONFIGURATION (Disabled in development)
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
FORCE_HTTPS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_DIR=./logs
LOG_FILE=app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7  # Shorter retention for development
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# BACKUP CONFIGURATION (Disabled in development)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_DIR=./backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# RESOURCE LIMITS (Relaxed for development)
# =============================================================================
# Backend Resource Limits
BACKEND_MEMORY_LIMIT=2g
BACKEND_CPU_LIMIT=2.0

# Frontend Resource Limits
FRONTEND_MEMORY_LIMIT=1g
FRONTEND_CPU_LIMIT=1.0

# Database Resource Limits
POSTGRES_MEMORY_LIMIT=1g
POSTGRES_CPU_LIMIT=1.0

# Redis Resource Limits
REDIS_MEMORY_LIMIT=512m
REDIS_CPU_LIMIT=0.5

# =============================================================================
# DEVELOPMENT-SPECIFIC CONFIGURATION
# =============================================================================
# Hot Reload & Auto-restart
HOT_RELOAD=true
AUTO_RESTART=true

# Development Debugging
ENABLE_PTVSD=false
PTVSD_PORT=5678

# Volume Mounts (for development)
ENABLE_VOLUME_MOUNTS=true

# Development Database Seeding
SEED_SAMPLE_DATA=true
SAMPLE_DATA_PATH=./backend/sample_data/